<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8E4FF">

    <!-- Header -->

    <!-- Cart Items Container -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#6B2D92"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="32dp"
            android:layout_height="27dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/back_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/cartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/your_shopping_cart_3_items"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/backButton"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/cartItemsScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/checkoutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Cart Item 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/item1Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/item1Image"
                        android:layout_width="87dp"
                        android:layout_height="96dp"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        android:src="@drawable/premium_gift_box"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="ImageContrastCheck" />

                    <TextView
                        android:id="@+id/item1Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/premium_gift_box"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/item1Image"
                        app:layout_constraintTop_toTopOf="@id/item1Image" />

                    <TextView
                        android:id="@+id/item1Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/npr_1499"
                        android:textColor="#6B2D92"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/item1Name"
                        app:layout_constraintTop_toBottomOf="@id/item1Name" />

                    <ImageView
                        android:id="@+id/item1Delete"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_delete"
                        android:importantForAccessibility="no"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#FF0000" />

                    <LinearLayout
                        android:id="@+id/item1QuantityLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@id/item1Price"
                        app:layout_constraintTop_toBottomOf="@id/item1Price">

                        <ImageView
                            android:id="@+id/item1Decrease"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/_1"
                            android:src="@drawable/ic_remove"
                            app:layout_constraintEnd_toEndOf="@id/item1Increase"
                            app:tint="#6B2D92" />

                        <TextView
                            android:id="@+id/item1Quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/_1"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/item1Increase"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/_1"
                            android:src="@drawable/ic_add"
                            app:tint="#6B2D92" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cart Item 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/item2Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item1Card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/item2Image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/chocolate"
                        android:importantForAccessibility="no"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/item2Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/chocolate_deluxe"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/item2Image"
                        app:layout_constraintTop_toTopOf="@id/item2Image" />

                    <TextView
                        android:id="@+id/item2Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/npr_500"
                        android:textColor="#6B2D92"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/item2Name"
                        app:layout_constraintTop_toBottomOf="@id/item2Name"
                        android:importantForAccessibility="no"/>

                    <ImageView
                        android:id="@+id/item2Delete"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_delete"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#FF0000"
                        />

                    <LinearLayout
                        android:id="@+id/item2QuantityLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@id/item2Price"
                        app:layout_constraintTop_toBottomOf="@id/item2Price">

                        <ImageView
                            android:id="@+id/item2Decrease"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_remove"
                            app:tint="#6B2D92" />

                        <TextView
                            android:id="@+id/item2Quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="TODO"
                            android:text="@string/_1"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:importantForAccessibility="no"/>

                        <ImageView
                            android:id="@+id/item2Increase"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add"
                            app:tint="#6B2D92" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Cart Item 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/item3Card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item2Card">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/item3Image"
                        android:layout_width="79dp"
                        android:layout_height="93dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cake_image"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/item3Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="Birthday Celebration"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@id/item3Image"
                        app:layout_constraintTop_toTopOf="@id/item3Image"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/item3Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:importantForAccessibility="no"
                        android:text="@string/npr_850"
                        android:textColor="#6B2D92"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="@id/item3Name"
                        app:layout_constraintTop_toBottomOf="@id/item3Name" />

                    <ImageView
                        android:id="@+id/item3Delete"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_delete"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#FF0000" />

                    <LinearLayout
                        android:id="@+id/item3QuantityLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:importantForAccessibility="no"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@id/item3Price"
                        app:layout_constraintTop_toBottomOf="@id/item3Price">

                        <ImageView
                            android:id="@+id/item3Decrease"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_remove"
                            app:tint="#6B2D92" />

                        <TextView
                            android:id="@+id/item3Quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="1"
                            android:textColor="#333333"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/item3Increase"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add"
                            app:tint="#6B2D92" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Options Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/optionsCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item3Card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Personalised note options -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Add note"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rgNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rbNoNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No note (Rs. 0)" />

                        <RadioButton
                            android:id="@+id/rbPersonalisedNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Personalised note (Rs. 100)" />
                    </RadioGroup>

                    <!-- Input field for personalised note (hidden by default) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilPersonalisedNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Type your personalised message..."
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPersonalisedNote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:maxLines="4" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Gift wrapping toggle -->
                    <CheckBox
                        android:id="@+id/giftWrappingCheckbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/gift_wrapping"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <!-- Gift wrapping options (hidden by default) -->
                    <LinearLayout
                        android:id="@+id/layoutGiftWrapOptions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp"
                        android:visibility="gone">

                        <RadioGroup
                            android:id="@+id/rgGiftWrap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rbSingleWrap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Single wrap (Rs. 50)" />

                            <RadioButton
                                android:id="@+id/rbDoubleWrap"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Double wrap (Rs. 100)" />
                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Order Summary -->
            <androidx.cardview.widget.CardView
                android:id="@+id/summaryCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/optionsCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/order_summary"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/subtotal"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/subtotalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/npr_3649"
                            android:textColor="#333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/shipping"
                            android:textColor="#666666"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/shippingText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/npr_100"
                            android:textColor="#333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#CCCCCC" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total"
                            android:textColor="#333333"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/npr_2949"
                            android:textColor="#6B2D92"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/checkoutButton"
        android:layout_width="266dp"
        android:layout_height="62dp"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:text="@string/proceed_to_checkout_npr_2949"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#6B2D92"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>