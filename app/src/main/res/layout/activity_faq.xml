<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_faqs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".FaqActivity">


    <LinearLayout
        android:id="@+id/headerFaqs"
        android:layout_width="418dp"
        android:layout_height="108dp"
        android:background="@drawable/gradient_purple_pink"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBackFaqs"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Back"
            android:src="@drawable/back_arrow"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/faqs"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerFaqs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Q1 block -->
            <LinearLayout
                android:id="@+id/block_q1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/tvQ1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_1_what_is_giftbox"
                    android:textColor="#222222"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:paddingVertical="4dp" />

                <TextView
                    android:id="@+id/tvA1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/giftbox_is_a_simple_app_to_help_you_select_schedule_and_send_gifts_to_your_loved_ones"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />

            <!-- Q2 block -->
            <LinearLayout
                android:id="@+id/block_q2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/tvQ2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/_2_how_do_i_place_an_order"
                    android:textColor="#222222"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:paddingVertical="4dp" />

                <TextView
                    android:id="@+id/tvA2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/choose_a_category_pick_your_gift_fill_in_the_delivery_details_and_confirm_your_order_from_the_cart"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Repeat similar blocks for Q3, Q4, Q5 ... -->

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
