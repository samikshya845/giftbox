<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3F7"
    tools:context=".SeasonalCategoryActivity">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="174dp"
        android:background="@drawable/header_gradient"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/back"
            android:padding="8dp"
            android:src="@drawable/back_arrow"
            app:tint="@android:color/white" />

        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/ivBack"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gift category"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seasonal Gifts"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Search bar -->
        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/search_background"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/search_anniversary_gifts"
                android:src="@drawable/ic_search_24"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search seasonal gifts"
                android:paddingStart="8dp"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="#FFE0F0"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

    </RelativeLayout>

    <!-- Vertical Scroll with seasonal gifts -->
    <ScrollView
        android:id="@+id/vertical_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Row 1: Dashain Hamper + Tihar Diya Set -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <!-- Dashain Hamper -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgDashainHamper"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dry_fruit" />

                        <ImageView
                            android:id="@+id/favDashainHamper"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignTop="@id/imgDashainHamper"
                            android:layout_alignEnd="@id/imgDashainHamper"
                            android:layout_margin="6dp"
                            android:background="@drawable/circle_white"
                            android:padding="3dp"
                            android:src="@drawable/ic_favourites_border" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgDashainHamper"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Dashain Dry Fruits Hamper"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="NPR 2,499"
                                android:textColor="#C2185B"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/gradient_purple_pink"
                                android:text="@string/add_to_cart"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Tihar Diya & Sweets -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgTiharCombo"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/diyo" />

                        <ImageView
                            android:id="@+id/favTiharCombo"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignTop="@id/imgTiharCombo"
                            android:layout_alignEnd="@id/imgTiharCombo"
                            android:layout_margin="6dp"
                            android:background="@drawable/circle_white"
                            android:padding="3dp"
                            android:src="@drawable/ic_favourites_border" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgTiharCombo"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tihar Diya and Mithai Combo"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="NPR 1,899"
                                android:textColor="#C2185B"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/gradient_purple_pink"
                                android:text="@string/add_to_cart"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 2: Holi Colors Box + Christmas Treat Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <!-- Holi Colors Box -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgHoliBox"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/holi" />

                        <ImageView
                            android:id="@+id/favHoliBox"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignTop="@id/imgHoliBox"
                            android:layout_alignEnd="@id/imgHoliBox"
                            android:layout_margin="6dp"
                            android:background="@drawable/circle_white"
                            android:padding="3dp"
                            android:src="@drawable/ic_favourites_border" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgHoliBox"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Holi Colors and Sweets Box"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="NPR 1,499"
                                android:textColor="#C2185B"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/gradient_purple_pink"
                                android:text="@string/add_to_cart"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- Christmas Treat Box -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgChristmasBox"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/christmas" />

                        <ImageView
                            android:id="@+id/favChristmasBox"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignTop="@id/imgChristmasBox"
                            android:layout_alignEnd="@id/imgChristmasBox"
                            android:layout_margin="6dp"
                            android:background="@drawable/circle_white"
                            android:padding="3dp"
                            android:src="@drawable/ic_favourites_border" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgChristmasBox"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Christmas Cookies and Hot Cocoa Box"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="NPR 1,799"
                                android:textColor="#C2185B"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/gradient_purple_pink"
                                android:text="@string/add_to_cart"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 3: Valentine Combo + Generic Festive Hamper -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Valentine Gift Combo -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgValentineCombo"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/valentine" />

                        <ImageView
                            android:id="@+id/favValentineCombo"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignTop="@id/imgValentineCombo"
                            android:layout_alignEnd="@id/imgValentineCombo"
                            android:layout_margin="6dp"
                            android:background="@drawable/circle_white"
                            android:padding="3dp"
                            android:src="@drawable/ic_favourites_border" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgValentineCombo"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Valentine Flowers and Chocolates Combo"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="NPR 2,299"
                                android:textColor="#C2185B"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/gradient_purple_pink"
                                android:text="@string/add_to_cart"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- All-Festivals Gift Hamper -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp">

                        <ImageView
                            android:id="@+id/imgFestiveHamper"
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/all" />

                        <ImageView
                            android:id="@+id/favFestiveHamper"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignTop="@id/imgFestiveHamper"
                            android:layout_alignEnd="@id/imgFestiveHamper"
                            android:layout_margin="6dp"
                            android:background="@drawable/circle_white"
                            android:padding="3dp"
                            android:src="@drawable/ic_favourites_border" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgFestiveHamper"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="All-Festivals Premium Gift Hamper"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="NPR 2,999"
                                android:textColor="#C2185B"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/gradient_purple_pink"
                                android:text="@string/add_to_cart"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
