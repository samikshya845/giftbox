<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8E4FF"
    tools:context=".MyOrdersActivity">


    <LinearLayout
        android:id="@+id/orders_header"
        android:layout_width="414dp"
        android:layout_height="126dp"
        android:background="@drawable/gradient_purple_pink"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Back"
                android:src="@drawable/back_arrow"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/orders_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="My Orders"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/orders_profile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:contentDescription="Profile"
                android:src="@drawable/profile_icon"
                app:tint="@color/faqAnswerBg" />
        </LinearLayout>

        <TextView
            android:id="@+id/orders_subtitle"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Track your surprise deliveries âœ¨"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Status chips row -->
    <HorizontalScrollView
        android:id="@+id/status_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/orders_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/chip_all"
                android:layout_width="98dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/chip_selected"
                android:gravity="center"
                android:text="All"
                android:textColor="@color/background"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/chip_active"
                android:layout_width="119dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/chip_unselected"
                android:gravity="center"
                android:text="Active"
                android:textColor="#6A4C93"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/chip_completed"
                android:layout_width="143dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/chip_unselected"
                android:gravity="center"
                android:text="Completed"
                android:textColor="#6A4C93"
                android:textSize="13sp" />
        </LinearLayout>
    </HorizontalScrollView>


    <ScrollView
        android:id="@+id/orders_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_scroll"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>
