<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".TermsandConditionsActivity">


    <LinearLayout
        android:id="@+id/headerTerms"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:background="@drawable/gradient_purple_pink"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBackTerms"
            android:layout_width="46dp"
            android:layout_height="58dp"
            android:contentDescription="Back"
            android:src="@drawable/back_arrow"
            app:tint="@android:color/white"
            android:layout_marginTop="10dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:text="@string/terms_and_conditions"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerTerms"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Intro -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_read_these_terms_and_conditions_carefully_before_using_giftbox"
                android:textColor="#444444"
                android:textSize="17sp"
                android:lineSpacingExtra="2dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/_1_general"
                android:textColor="#222222"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/giftbox_is_a_gift_ordering_application_designed_to_help_you_send_gifts_easily"
                android:textColor="#555555"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_using_giftbox_you_agree_to_follow_all_terms_mentioned_on_this_page"
                android:textColor="#555555"
                android:textSize="15sp" />

            <!-- Section: Orders -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/_2_orders"
                android:textColor="#222222"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/please_check_delivery_address_date_and_time_carefully_before_confirming_an_order"
                android:textColor="#555555"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orders_may_not_be_editable_or_cancellable_after_a_certain_time"
                android:textColor="#555555"
                android:textSize="15sp" />

            <!-- Section: Payments -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/_3_payments"
                android:textColor="#222222"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/all_prices_offers_and_delivery_charges_are_shown_inside_the_app"
                android:textColor="#555555"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_related_issues_with_your_bank_or_wallet_are_handled_by_the_respective_provider"
                android:textColor="#555555"
                android:textSize="14sp" />

            <!-- Section: Privacy -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/_4_privacy"
                android:textColor="#222222"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/your_personal_data_is_used_only_to_process_orders_and_improve_our_service"
                android:textColor="#555555"
                android:textSize="15sp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/_5_changes_to_terms"
                android:textColor="#222222"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/giftbox_may_update_these_terms_from_time_to_time_inside_the_app"
                android:textColor="#555555"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
