<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".TermsandConditionsActivity">

    <!-- Top bar -->
    <LinearLayout
        android:id="@+id/headerTerms"
        android:layout_width="416dp"
        android:layout_height="99dp"
        android:background="@drawable/gradient_purple_pink"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBackTerms"
            android:layout_width="45dp"
            android:layout_height="39dp"
            android:contentDescription="Back"
            android:src="@drawable/back_arrow"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="331dp"
            android:layout_height="54dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:text="Terms and Conditions"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerTerms"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Intro -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please read these terms and conditions carefully before using GiftBox."
                android:textColor="#444444"
                android:textSize="17sp"
                android:lineSpacingExtra="2dp" />

            <!-- Section: General -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="1. General"
                android:textColor="#222222"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• GiftBox is a gift-ordering application designed to help you send gifts easily."
                android:textColor="#555555"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• By using GiftBox you agree to follow all terms mentioned on this page."
                android:textColor="#555555"
                android:textSize="15sp" />

            <!-- Section: Orders -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="2. Orders"
                android:textColor="#222222"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• Please check delivery address, date and time carefully before confirming an order."
                android:textColor="#555555"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Orders may not be editable or cancellable after a certain time."
                android:textColor="#555555"
                android:textSize="15sp" />

            <!-- Section: Payments -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="3. Payments"
                android:textColor="#222222"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• All prices, offers and delivery charges are shown inside the app."
                android:textColor="#555555"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Payment related issues with your bank or wallet are handled by the respective provider."
                android:textColor="#555555"
                android:textSize="14sp" />

            <!-- Section: Privacy -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="4. Privacy"
                android:textColor="#222222"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• Your personal data is used only to process orders and improve our service."
                android:textColor="#555555"
                android:textSize="15sp" />



            <!-- Section: Changes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="5. Changes to terms"
                android:textColor="#222222"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="• GiftBox may update these terms from time to time inside the app."
                android:textColor="#555555"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
